<%= form_with model: @task, class: "w-50 mx-auto d-flex flex-column" do |form| %>
  <div>
    <%= form.label :title, class: "form-label"  %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div>
    <%= form.label :details, class: "form-label" %>
    <%= form.text_field :details, class: "form-control" %>
  </div>
  <% if !@task.new_record? %>
  <div>
    <%= form.label :completed, class: "form-label" %>
    <%= form.check_box :completed, class: "form-check-input" %>
    <%= form.label :completed, class: "form-check-label" %>
  </div>
  <% end %>
  <%= form.submit class: "btn btn-primary mt-2 w-25" %>
<% end %>