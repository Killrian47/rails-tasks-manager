<h1>All tasks</h1>

<div class="container">
  <%= link_to "Create a new task", new_task_path %>
  <div class="d-flex flex-column">
    <% @tasks.each do |task| %>
    <div>
      <input type="checkbox" <%= 'checked' if task.completed %> />
      <label><%= link_to task.title, task_path(task) %></label>
      <%= link_to(raw("<i class='fa-solid fa-trash'></i>"),
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"})
      %>
    </div>
    <% end %>
  </div>
</div>
